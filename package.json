{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "license": "MIT",
  "scripts": {
    "start": "parcel serve src/index.pug --open",
    "lint": "eslint . && stylelint src/**/*.pcss",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "del-cli dist/ .cache",
    "build:home": "NODE_ENV=production ./scripts/build-home.js",
    "build:api": "NODE_ENV=production ./scripts/build-api.js",
    "build": "yarn build:home && yarn build:api",
    "start:build": "serve dist"
  },
  "dependencies": {
    "@babel/core": "^7.13.8",
    "@parcel/optimizer-cssnano": "^2.0.0-nightly.612",
    "@parcel/optimizer-htmlnano": "^2.0.0-nightly.612",
    "@parcel/packager-css": "^2.0.0-nightly.612",
    "@parcel/packager-html": "^2.0.0-nightly.612",
    "@parcel/transformer-babel": "^2.0.0-nightly.612",
    "@parcel/transformer-css": "^2.0.0-nightly.612",
    "@parcel/transformer-html": "^2.0.0-nightly.612",
    "@parcel/transformer-postcss": "^2.0.0-nightly.612",
    "@parcel/transformer-posthtml": "^2.0.0-nightly.612",
    "@parcel/transformer-pug": "^2.0.0-nightly.612",
    "autoprefixer": "^10.2.4",
    "colorette": "^1.2.2",
    "del": "^6.0.0",
    "del-cli": "^3.0.1",
    "globby": "^11.0.2",
    "jstransformer-lowlight": "^0.1.0",
    "parcel": "^2.0.0-nightly.472",
    "postcss": "^8.2.7",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^5.0.4",
    "pug": "^3.0.2",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^13.0.1",
    "remark-parse": "^9.0.0",
    "typedoc": "^0.20.29",
    "unified": "^9.2.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.0.0",
    "@logux/stylelint-config": "^0.2.0",
    "@size-limit/file": "^4.10.0",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.17.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^28.0.2",
    "lint-staged": "^10.5.4",
    "serve": "^11.3.2",
    "simple-pre-commit": "^1.2.1",
    "size-limit": "^4.10.0",
    "stylelint": "^13.11.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^2.2.0",
    "typescript": "^4.2.2"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "node/no-extraneous-require": "off"
    }
  },
  "eslintIgnore": [
    ".parcel-cache/",
    "design/",
    "dist/"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "simple-pre-commit": "npx lint-staged",
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Home",
      "path": [
        "dist/index.html",
        "dist/*.svg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2",
        "!dist/logo.svg",
        "!dist/logo-leftp.svg"
      ],
      "limit": "310 KB"
    },
    {
      "name": "API",
      "path": [
        "dist/api/index.html",
        "dist/api-*.css",
        "dist/postcss.*.jpg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2"
      ],
      "limit": "260 KB"
    }
  ]
}
