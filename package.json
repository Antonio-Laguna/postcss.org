{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "googleAnalyticsUA": "UA-73693753-1",
  "license": "MIT",
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:css": "stylelint \"web_modules/**/*.css\"",
    "lint": "npm-run-all --parallel lint:*",
    "lint-staged": "lint-staged",
    "svgo-staged": "./scripts/svgo.sh",
    "start": "phenomic start",
    "build": "phenomic build",
    "pretest": "npm run lint",
    "test": "npm run build",
    "styleguide-server": "styleguidist server",
    "styleguide-build": "styleguidist build",
    "predeploy": "npm run build",
    "deploy": "./scripts/deploy.sh"
  },
  "devDependencies": {
    "@logux/eslint-config": "^39.0.3",
    "@logux/stylelint-config": "^0.1.3",
    "eslint": "^7.3.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettierx": "^0.12.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "stylelint": "^13.6.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^1.3.2"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off"
    },
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  }
}
