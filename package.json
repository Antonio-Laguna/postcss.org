{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "license": "MIT",
  "scripts": {
    "start": "parcel serve src/index.pug --open",
    "lint": "eslint . && stylelint src/**/*.css",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "del-cli dist/ .cache",
    "build": "NODE_ENV=production ./scripts/build.js"
  },
  "dependencies": {
    "autoprefixer": "^9.8.1",
    "del": "^5.1.0",
    "del-cli": "^3.0.1",
    "parcel-bundler": "^1.12.4",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.2.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^39.0.3",
    "@logux/stylelint-config": "^0.1.3",
    "@size-limit/file": "^4.5.1",
    "eslint": "^7.3.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-prettierx": "^0.12.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "pug": "^3.0.0",
    "size-limit": "^4.5.1",
    "stylelint": "^13.6.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^1.3.2"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "eslintIgnore": [
    "web_modules/",
    "design/",
    "dist/",
    ".cache/"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "path": [
        "dist/index.html"
      ],
      "limit": "2 KB"
    }
  ]
}
