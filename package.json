{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "parcel serve src/index.pug --open",
    "lint": "eslint . && stylelint src/**/*.pcss",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "rm -Rf dist/ .parcel-cache/",
    "build:home": "NODE_ENV=production ./scripts/build-home.js",
    "build:api": "NODE_ENV=production ./scripts/build-api.js",
    "build": "yarn build:home && yarn build:api",
    "start:build": "serve dist"
  },
  "dependencies": {
    "@babel/core": "^7.15.8",
    "@parcel/optimizer-cssnano": "2.0.0-beta.2",
    "@parcel/optimizer-htmlnano": "2.0.0-beta.2",
    "@parcel/packager-css": "2.0.0-beta.2",
    "@parcel/packager-html": "2.0.0-beta.2",
    "@parcel/transformer-babel": "2.0.0-beta.2",
    "@parcel/transformer-css": "2.0.0-beta.2",
    "@parcel/transformer-html": "2.0.0-beta.2",
    "@parcel/transformer-postcss": "2.0.0-beta.2",
    "@parcel/transformer-posthtml": "2.0.0-beta.2",
    "@parcel/transformer-pug": "2.0.0-beta.2",
    "autoprefixer": "^10.3.7",
    "del": "^6.0.0",
    "globby": "^12.0.2",
    "jstransformer-lowlight": "^0.1.0",
    "parcel": "2.0.0-beta.2",
    "postcss": "^8.3.9",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^5.0.6",
    "pug": "^3.0.2",
    "remark-highlight.js": "^7.0.1",
    "remark-html": "^15.0.0",
    "remark-parse": "^10.0.0",
    "typedoc": "^0.21.4",
    "unified": "^10.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.0.0",
    "@logux/stylelint-config": "^0.3.1",
    "@size-limit/file": "^6.0.3",
    "eslint": "^8.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.0.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^37.0.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "serve": "^12.0.1",
    "simple-git-hooks": "^2.6.1",
    "size-limit": "^6.0.3",
    "stylelint": "^13.13.1",
    "svgo": "^2.7.0",
    "typescript": "~4.3.5"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "node/no-extraneous-require": "off"
    }
  },
  "eslintIgnore": [
    ".parcel-cache/",
    "design/",
    "dist/"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Home",
      "path": [
        "dist/index.html",
        "dist/*.svg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2",
        "!dist/logo.svg",
        "!dist/logo-leftp.svg"
      ],
      "limit": "320 KB"
    },
    {
      "name": "API",
      "path": [
        "dist/api/index.html",
        "dist/api-*.css",
        "dist/postcss.*.jpg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2"
      ],
      "limit": "270 KB"
    }
  ]
}
