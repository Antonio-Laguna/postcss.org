.showcase {
  justify-content: center;
  max-width: 900px;
  padding: 5rem 1rem 1rem 1rem;
  margin: 0 auto;
  background: url("./burst.svg") center 2rem no-repeat;
}

.showcase_title {
  font-size: 1.625rem;
  font-weight: normal;
  font-weight: 300;
  line-height: 1.25;
  color: #dd3a0a;
  text-align: center;
}

.showcase_items {
  margin: 1.5rem auto 0;
}

.showcase_item {
  display: block;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 1rem;
}

.showcase_logo {
  max-width: 100%;
}

@media (width > 410px) {
  .showcase {
    padding-top: 6rem;
    background-position: center 3rem;
  }

  .showcase_items {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
  }

  .showcase_item {
    flex-basis: calc(33% - 2rem);
  }
}

@media (width > 800px) {
  .showcase_item {
    flex-basis: 150px;
  }
}
